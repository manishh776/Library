<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">


    <com.kwaou.library.helper.NonSwipingViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/card"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="5dp"
            android:background="@color/colorPrimaryDark"
            android:paddingBottom="5dp"
            >

            <TextView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="logout"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:drawableTop="@drawable/ic_logout"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:drawablePadding="5dp"
                />

            <TextView
                android:id="@+id/books"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="books"
                android:drawablePadding="5dp"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:drawableTop="@drawable/ic_books_stack_of_three"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                />




            <ImageView
                android:id="@+id/add_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_book"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="notifications"
                android:drawablePadding="5dp"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:drawableTop="@drawable/ic_icon___notify"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="profile"
                android:drawablePadding="5dp"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:drawableTop="@drawable/ic_user"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>